<Page x:Class="F1_time_tracking.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:F1_time_tracking"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid>
        <TextBox x:Name="Username" HorizontalAlignment="Center" Margin="0,160,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Width="139" Height="27"/>
        <PasswordBox x:Name="Password" HorizontalAlignment="Center" Margin="0,225,0,0"   VerticalAlignment="Top" Width="140" Height="27"/>
        <Label x:Name="label" Content="Username" HorizontalAlignment="Left" Margin="330,134,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.102,0.024"/>
        <Label x:Name="label1" Content="Passwort" HorizontalAlignment="Left" Margin="330,194,0,0" VerticalAlignment="Top"/>
        <Button x:Name="button" Content="Login" HorizontalAlignment="Center" Margin="0,277,0,0" VerticalAlignment="Top" Width="70" Click="button_Click"/>

    </Grid>
</Page>
